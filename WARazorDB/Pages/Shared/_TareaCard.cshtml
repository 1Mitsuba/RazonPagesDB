@model WARazorDB.Models.Tarea

<div class="card mb-3">
    <div class="card-body p-3">
        <h5 class="card-title">@Model.nombreTarea</h5>
        
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted">Vencimiento: @Model.fechaVencimiento.ToString("dd/MM/yyyy")</span>
            
            @{
                string badgeClass = Model.estado?.ToLower() switch
                {
                    "pendiente" => "badge bg-warning",
                    "en curso" => "badge bg-info",
                    "finalizado" => "badge bg-success",
                    "cancelado" => "badge bg-danger",
                    _ => "badge bg-secondary"
                };
            }
            
            <span class="@badgeClass">@Model.EstadoFormateado</span>
        </div>
        
        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-page="./Details" asp-route-id="@Model.Id" class="btn-action btn-view" title="Ver detalles">
                <i class="fas fa-eye"></i>
            </a>
            
            @if (Model.estado?.ToLower() != "finalizado" && Model.estado?.ToLower() != "cancelado")
            {
                <form method="post" asp-page-handler="Completar" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn-action btn-complete" title="Completar">
                        <i class="fas fa-check"></i>
                    </button>
                </form>
                
                <form method="post" asp-page-handler="Cancelar" asp-route-id="@Model.Id" class="d-inline">
                    <button type="submit" class="btn-action btn-cancel" title="Cancelar">
                        <i class="fas fa-ban"></i>
                    </button>
                </form>
                
                <a asp-page="./Edit" asp-route-id="@Model.Id" class="btn-action btn-edit" title="Editar">
                    <i class="fas fa-edit"></i>
                </a>
            }
            else
            {
                <a asp-page="./Delete" asp-route-id="@Model.Id" class="btn-action btn-delete" title="Eliminar">
                    <i class="fas fa-trash"></i>
                </a>
            }
        </div>
    </div>
</div>