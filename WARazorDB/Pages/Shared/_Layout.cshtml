<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MP MiPanel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/select-custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WARazorDB.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="main-header">
        <div class="d-flex align-items-center h-100">
            <a href="/" class="logo">
                <i class="fas fa-th-large"></i>
                <span>MP MiPanel</span>
            </a>
        </div>
        <div class="d-flex align-items-center h-100">
            <button id="sidebarToggle" class="btn sidebar-toggle" aria-label="Toggle sidebar">
                <i class="fas fa-bars"></i>
            </button>
            <div class="user-profile">
                <div class="dropdown">
                    <button class="btn dropdown-toggle user-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-1"></i>
                        Administrador
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mi Perfil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="d-flex">
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu">
                    <li class="header">NAVEGACIÓN PRINCIPAL</li>
                    <li>
                        <a asp-page="/Index">
                            <i class="fas fa-home"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Concluida">
                            <i class="fas fa-check-circle"></i>
                            <span>Tareas Finalizadas</span>
                        </a>
                    </li>
                    <li>
                        <a asp-page="/Cancelada">
                            <i class="fas fa-times-circle"></i>
                            <span>Tareas Canceladas</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fas fa-user"></i>
                            <span>Perfil</span>
                        </a>
                    </li>
                    <li class="header">CONFIGURACIÓN</li>
                    <li>
                        <a asp-page="/Privacy">
                            <i class="fas fa-shield-alt"></i>
                            <span>Privacidad</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fas fa-cog"></i>
                            <span>Configuración</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fas fa-question-circle"></i>
                            <span>Ayuda</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            <div class="content-container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="app-footer">
                <div class="footer-content">
                    <div class="footer-section">
                        <h5 class="footer-title">MP MiPanel</h5>
                        <p class="footer-description">Sistema de gestión de tareas y productividad personal</p>
                    </div>
                    <div class="footer-section">
                        <h5 class="footer-title">Enlaces</h5>
                        <ul class="footer-links">
                            <li><a asp-page="/Index">Inicio</a></li>
                            <li><a asp-page="/Concluida">Tareas Finalizadas</a></li>
                            <li><a asp-page="/Cancelada">Tareas Canceladas</a></li>
                            <li><a asp-page="/Privacy">Privacidad</a></li>
                        </ul>
                    </div>
                    <div class="footer-section">
                        <h5 class="footer-title">Contacto</h5>
                        <ul class="footer-contact">
                            <li><i class="fas fa-envelope me-2"></i>contacto@mipanel.com</li>
                            <li><i class="fas fa-phone me-2"></i>(+51) 123 456 789</li>
                        </ul>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="footer-copyright">
                        &copy; @DateTime.Now.Year - MP MiPanel - Todos los derechos reservados
                    </div>
                    <div class="footer-social">
                        <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>