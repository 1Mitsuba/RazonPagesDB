@page
@model WARazorDB.Pages.DetailsModel

@{
    ViewData["Title"] = "Detalles de Tarea";
}

<h1 class="tareas-title">Detalles de la Tarea</h1>

<div class="page-content">
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h5 style="color: var(--dark-purple)">
                <i class="fas fa-clipboard-list me-2"></i>
                @Model.Tarea.nombreTarea
            </h5>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-new-task me-2">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 mb-4">
                <div class="card-body p-0">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th style="width: 200px;">
                                    <i class="fas fa-hashtag me-2" style="color: var(--secondary-color)"></i>
                                    ID
                                </th>
                                <td>@Model.Tarea.Id</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-tag me-2" style="color: var(--secondary-color)"></i>
                                    Nombre
                                </th>
                                <td>@Model.Tarea.nombreTarea</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-calendar-alt me-2" style="color: var(--secondary-color)"></i>
                                    Fecha de Vencimiento
                                </th>
                                <td>@Model.Tarea.fechaVencimiento.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-info-circle me-2" style="color: var(--secondary-color)"></i>
                                    Estado
                                </th>
                                <td>
                                    @{
                                        string badgeClass = "";
                                        
                                        switch (Model.Tarea.estado.ToLower())
                                        {
                                            case "pendiente":
                                                badgeClass = "badge bg-warning";
                                                break;
                                            case "en curso":
                                                badgeClass = "badge bg-info";
                                                break;
                                            default:
                                                badgeClass = "badge bg-warning";
                                                break;
                                        }
                                    }
                                    <span class="@badgeClass">@Model.Tarea.estado</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="fas fa-user me-2" style="color: var(--secondary-color)"></i>
                                    ID Usuario
                                </th>
                                <td>@Model.Tarea.idUsuario</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="d-flex">
                <a asp-page="./Edit" asp-route-id="@Model.Tarea.Id" class="btn btn-new-task me-2">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
                <a asp-page="./Delete" asp-route-id="@Model.Tarea.Id" class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar
                </a>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card border-0 bg-light">
                <div class="card-body">
                    <h5 style="color: var(--dark-purple)">
                        <i class="fas fa-history me-2"></i>Historial
                    </h5>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Estado actual:</small>
                        <span class="@badgeClass">@Model.Tarea.estado</span>
                    </div>
                    
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">Última actualización:</small>
                        <span>@DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                    
                    <hr>
                    
                    <div class="d-grid">
                        <a asp-page="./Index" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list me-2"></i>Ver todas las tareas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
